<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
</head>
<body>
<h1><%= (var1 === "asda") ? 3 : 'as' %></h1>

<h1>Clientes lista</h1>
<h2><a href="/clienteDetalle/insertar">Agregar Cliente</a></h2>
<table border="1">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Edad</th>
        <th>TelÃ©fono</th>
        <th>Ciudad</th>
    </tr>
    </thead>
    <tbody>
    <% clientes.forEach(cliente => { %>
        <tr>
            <td><%= cliente.nombre %></td>
            <td><%= cliente.apellido %></td>
            <td><%= cliente.edad %></td>
            <td><%= cliente.telefono %></td>
            <td><%= cliente.ciudad %></td>
            <td><a href='/clienteDetalle/actualizar/<%= cliente.codigo %>'>Editar</a></td>
            <td><a href='/clienteDetalle/ver/<%= cliente.codigo %>'>Ver</a></td>
            <td><a href='/clienteDetalle/eliminar/<%= cliente.codigo %>'>Eliminar</a></td>
        </tr>
        <% });
    %>
    </tbody>
</table>

</body>
</html>
